<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }

        .dropdown-menu {
            transition: opacity 0.2s ease-in-out, transform 0.2s ease-in-out;
            transform-origin: top;
            transform: scaleY(0);
            opacity: 0;
            display: none;
        }

        .dropdown-menu.open {
            display: block;
            transform: scaleY(1);
            opacity: 1;
        }
    </style>
</head>

<body class="bg-gray-100 p-4">
    <header class="bg-white shadow-md rounded-2xl p-4 mb-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-800">Dashboard Admin</h1>
        <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-600 hidden sm:block">Halo, Admin</span>
            <a href="/logout"
                class="bg-red-500 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-red-600 transition duration-150 ease-in-out">
                Logout
            </a>
        </div>
    </header>

    <% if (success_message) { %>
        <div id="success-alert" class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded-lg mb-4"
            role="alert">
            <p><%= success_message %></p>
        </div>
    <% } %>
    <% if (error_message) { %>
        <div id="error-alert"
            class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-lg mb-4" role="alert">
            <p><%= error_message %></p>
        </div>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
        <div class="bg-white rounded-2xl shadow-lg p-6 flex items-center justify-between transition-transform transform hover:scale-105 duration-200 ease-in-out">
            <div>
                <p class="text-lg font-medium text-gray-500">Total Agen Aktif</p>
                <p class="text-3xl font-bold text-gray-800"><%= total_agents %></p>
            </div>
            <div class="text-blue-500 text-4xl">
                <i class="fas fa-users"></i>
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow-lg p-6 flex items-center justify-between transition-transform transform hover:scale-105 duration-200 ease-in-out">
            <div>
                <p class="text-lg font-medium text-gray-500">Voucher Tersedia</p>
                <p class="text-3xl font-bold text-gray-800"><%= total_available_vouchers %></p>
            </div>
            <div class="text-green-500 text-4xl">
                <i class="fas fa-ticket-alt"></i>
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow-lg p-6 flex items-center justify-between transition-transform transform hover:scale-105 duration-200 ease-in-out">
            <div>
                <p class="text-lg font-medium text-gray-500">Voucher Terjual</p>
                <p class="text-3xl font-bold text-gray-800"><%= total_sold_vouchers %></p>
            </div>
            <div class="text-yellow-500 text-4xl">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow-lg p-6 flex items-center justify-between transition-transform transform hover:scale-105 duration-200 ease-in-out">
            <div>
                <p class="text-lg font-medium text-gray-500">Total Pendapatan Kotor</p>
                <p class="text-3xl font-bold text-gray-800">Rp<%= total_revenue.toLocaleString('id-ID') %></p>
            </div>
            <div class="text-purple-500 text-4xl">
                <i class="fas fa-dollar-sign"></i>
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow-lg p-6 flex items-center justify-between transition-transform transform hover:scale-105 duration-200 ease-in-out">
            <div>
                <p class="text-lg font-medium text-gray-500">Total Laba Bersih</p>
                <p class="text-3xl font-bold text-gray-800">Rp<%= total_net_profit.toLocaleString('id-ID') %></p>
            </div>
            <div class="text-red-500 text-4xl">
                <i class="fas fa-hand-holding-usd"></i>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-700">Manajemen Agen</h2>
            <div class="flex justify-between items-center mb-4">
                <button id="toggleRegisterForm"
                    class="bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-blue-600 transition duration-150 ease-in-out">
                    Tambah Pengguna
                </button>
                <button id="toggleTopupForm"
                    class="bg-teal-500 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-teal-600 transition duration-150 ease-in-out">
                    Top-up Saldo
                </button>
            </div>
            <div id="registerForm" class="hidden p-4 bg-gray-50 rounded-lg mb-4">
                <form action="/api/register" method="POST">
                    <h3 class="text-lg font-medium mb-2 text-gray-700">Formulir Pendaftaran Pengguna Baru</h3>
                    <div class="mb-2">
                        <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                        <input type="text" name="username" id="username" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm px-3 py-2">
                    </div>
                    <div class="mb-2">
                        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                        <input type="password" name="password" id="password" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm px-3 py-2">
                    </div>
                    <div class="mb-2">
                        <label for="role" class="block text-sm font-medium text-gray-700">Role</label>
                        <select name="role" id="role" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm px-3 py-2">
                            <option value="admin">Admin</option>
                            <option value="agent">Agen</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label for="city" class="block text-sm font-medium text-gray-700">Kota</label>
                        <select name="city" id="city" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm px-3 py-2">
                            <option value="">Pilih Kota</option>
                            <option value="Bahoan">Bahoan</option>
                            <option value="Dolok Merawa">Dolok Merawa</option>
                            </select>
                    </div>
                    <button type="submit"
                        class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-150 ease-in-out">
                        Daftar
                    </button>
                </form>
            </div>

            <div id="topupForm" class="hidden p-4 bg-gray-50 rounded-lg mb-4">
                <form action="/api/admin/topup-agent" method="POST">
                    <h3 class="text-lg font-medium mb-2 text-gray-700">Formulir Top-up Saldo Agen</h3>
                    <div class="mb-2">
                        <label for="agent_id" class="block text-sm font-medium text-gray-700">Pilih Agen</label>
                        <select name="agent_id" id="agent_id" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm px-3 py-2">
                            <% agents.forEach(agent => { %>
                                <option value="<%= agent.id %>"><%= agent.username %> (ID: <%= agent.id %>) - <%= agent.city %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label for="amount" class="block text-sm font-medium text-gray-700">Jumlah Top-up</label>
                        <input type="number" name="amount" id="amount" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm px-3 py-2">
                    </div>
                    <button type="submit"
                        class="w-full bg-teal-600 text-white font-semibold py-2 rounded-lg hover:bg-teal-700 transition duration-150 ease-in-out">
                        Top-up
                    </button>
                </form>
            </div>
            
            <h3 class="text-lg font-medium mb-2 text-gray-700">Daftar Agen</h3>
            <div class="overflow-x-auto rounded-lg border border-gray-200">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kota</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Saldo</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% agents.forEach(agent => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= agent.id %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= agent.username %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= agent.city || 'N/A' %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Rp<%= agent.balance.toLocaleString('id-ID') %></td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span
                                        class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= agent.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                        <%= agent.status %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <% if (agent.status === 'active') { %>
                                        <form action="/api/admin/deactivate-agent/<%= agent.id %>?_method=PUT"
                                            method="POST" class="inline-block">
                                            <button type="submit"
                                                class="text-red-600 hover:text-red-900 mr-2">Nonaktifkan</button>
                                        </form>
                                    <% } else { %>
                                        <form action="/api/admin/activate-agent/<%= agent.id %>?_method=PUT"
                                            method="POST" class="inline-block">
                                            <button type="submit"
                                                class="text-green-600 hover:text-green-900 mr-2">Aktifkan</button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-700">Manajemen Voucher</h2>
            <div class="p-4 bg-gray-50 rounded-lg mb-4">
                <h3 class="text-lg font-medium mb-2 text-gray-700">Impor Voucher dari Excel</h3>
                <form action="/api/admin/import-vouchers" method="POST" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="import_city" class="block text-sm font-medium text-gray-700">Kota Voucher</label>
                        <select name="city" id="import_city" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm px-3 py-2">
                            <option value="">Pilih Kota</option>
                            <option value="Bahoan">Bahoan</option>
                            <option value="Dolok Merawa">Dolok Merawa</option>
                            </select>
                    </div>
                    <div class="mb-4">
                        <label for="file" class="block text-sm font-medium text-gray-700">Pilih file Excel (.xlsx, .xls)</label>
                        <input type="file" name="file" id="file" required
                            class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
                    </div>
                    <button type="submit"
                        class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-150 ease-in-out">
                        Unggah & Impor
                    </button>
                </form>
            </div>
            
            <h3 class="text-lg font-medium mb-2 text-gray-700">Voucher Terjual</h3>
            <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Filter Laporan Penjualan</h2>
                <form action="/admin" method="GET" class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4">
                    <div class="flex-1 w-full">
                        <label for="startDate" class="block text-sm font-medium text-gray-700">Tanggal Mulai:</label>
                        <input type="date" id="startDate" name="startDate" value="<%= startDate %>" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 px-3 py-2">
                    </div>
                    <div class="flex-1 w-full">
                        <label for="endDate" class="block text-sm font-medium text-gray-700">Tanggal Selesai:</label>
                        <input type="date" id="endDate" name="endDate" value="<%= endDate %>" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 px-3 py-2">
                    </div>
                    <div class="flex-1 w-full">
                        <label for="city_filter" class="block text-sm font-medium text-gray-700">Filter Kota:</label>
                        <select name="city_filter" id="city_filter" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 px-3 py-2">
                            <option value="" <%= city_filter === '' ? 'selected' : '' %>>Semua Kota</option>
                            <% availableCities.forEach(city => { %>
                                <option value="<%= city %>" <%= city_filter === city ? 'selected' : '' %>><%= city %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="flex-1 w-full">
                        <label for="search" class="block text-sm font-medium text-gray-700">Cari Voucher:</label>
                        <input type="text" id="search" name="search" value="<%= search_query %>" placeholder="Cari kode voucher..." class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 px-3 py-2">
                    </div>
                    <div class="flex-1 w-full sm:w-auto mt-6 sm:mt-0">
                        <button type="submit" class="w-full bg-indigo-600 text-white px-6 py-2 rounded-lg shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150 ease-in-out">
                            Terapkan Filter
                        </button>
                    </div>
                </form>
            </div>
            <div class="overflow-x-auto rounded-lg border border-gray-200 max-h-96 overflow-y-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 sticky top-0">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kode</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Harga</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dijual Oleh</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kota</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal Jual</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% vouchers.forEach(voucher => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= voucher.code %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Rp<%= voucher.price.toLocaleString('id-ID') %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= voucher.agent_username || 'N/A' %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= voucher.agent_city || 'N/A' %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <span
                                        class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= voucher.status === 'sold' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                        <%= voucher.status %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    <%= voucher.sold_at ? new Date(voucher.sold_at).toLocaleString() : 'N/A' %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% if (vouchers.length === 0) { %>
                <p class="text-center text-gray-500 mt-4">Tidak ada data voucher yang ditemukan dalam rentang tanggal ini.</p>
            <% } %>
        </div>
    </div>
    
    <div class="bg-white rounded-2xl shadow-lg p-6 mt-6">
        <h2 class="text-xl font-semibold mb-4 text-gray-700">Log Aktivitas</h2>
        <div class="overflow-x-auto rounded-lg border border-gray-200 max-h-96 overflow-y-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Detail</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Waktu</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% logs.forEach(log => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= log.id %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= log.action %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= log.username %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 truncate max-w-xs">
                                <%= log.details %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                <%= new Date(log.timestamp).toLocaleString() %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Dropdown logic for forms
            const toggleRegisterBtn = document.getElementById('toggleRegisterForm');
            const registerForm = document.getElementById('registerForm');
            const toggleTopupBtn = document.getElementById('toggleTopupForm');
            const topupForm = document.getElementById('topupForm');

            toggleRegisterBtn.addEventListener('click', () => {
                registerForm.classList.toggle('hidden');
                if (!topupForm.classList.contains('hidden')) {
                    topupForm.classList.add('hidden');
                }
            });

            toggleTopupBtn.addEventListener('click', () => {
                topupForm.classList.toggle('hidden');
                if (!registerForm.classList.contains('hidden')) {
                    registerForm.classList.add('hidden');
                }
            });

            // Auto-hide alert messages after 5 seconds
            const successAlert = document.getElementById('success-alert');
            const errorAlert = document.getElementById('error-alert');
            if (successAlert) {
                setTimeout(() => {
                    successAlert.style.display = 'none';
                }, 5000);
            }
            if (errorAlert) {
                setTimeout(() => {
                    errorAlert.style.display = 'none';
                }, 5000);
            }
        });
    </script>
</body>
</html>
